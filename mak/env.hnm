!IFNDEF Z_ENV
!IFDEF  KZT
Z_ENV = $(KZT)
!ELSE
Z_ENV = w
!ENDIF
!ENDIF

!if "$(BUILDOS)"=="win95"
BUILDOS = win32
echo Change BUILDOS environment var from "win95" to "win32"
!endif

!IFNDEF Z_TOOLDIR
Z_TOOLDIR = tz
!ENDIF

!IFNDEF Z_BASE
Z_BASE   = ..\..
Z_BASE_A = $(Z_BASE)\a\$(Z_TOOLDIR)
Z_BASE_ENV = $(Z_BASE)\$(Z_ENV)\$(Z_TOOLDIR)
!ENDIF

Z_LIB        = $(Z_BASE)\$(Z_ENV)\lib
Z_LIB_SUFFIX = z
Z_BIN        = $(Z_BASE)\$(Z_ENV)\bin
Z_SRC        = $(Z_BASE_A)
Z_INC        = $(Z_BASE)\a\inc
Z_INC_ENV    = $(Z_BASE)\$(Z_ENV)\inc

!if "$(DEBUG)" == "1"
Z_OBJ = $(Z_BASE_ENV)\debug
!else
Z_OBJ = $(Z_BASE_ENV)\nodbg
!ENDIF

# =============================================================
# Set compile options
# =============================================================

CL_OPT = /Gz /W3 /Gm /GX /Zi /Od /Zp /G5 /Gf /c \
 /DZEIDON /D__WIN32__ /D_WINDOWS
LINK_OPT  = /NOD
LINK_OPT2 = /subsystem:windows /dll /machine:I386\
 /PDB:$(Z_BIN)\$(MODULE).PDB /debug /pdbtype:con
BASELINKDLLS = kernel32.lib user32.lib gdi32.lib winspool.lib comdlg32.lib\
 advapi32.lib shell32.lib ole32.lib oleaut32.lib uuid.lib odbc32.lib\
 odbccp32.lib kzoengaa.lib

!ifdef DEBUG
CL_OPT = /MDd -DDEBUG -D_DEBUG -Od $(CL_OPT)
LINK_OPT2 = /debug:full $(LINK_OPT2)
BASELINKDLLS = $(BASELINKDLLS) msvcrtd.lib
!else
CL_OPT = /MD $(CL_OPT)

BASELINKDLLS = $(BASELINKDLLS) msvcrt.lib
!endif

CL_OPT = $(CL_OPT) $(USER_OPT)
